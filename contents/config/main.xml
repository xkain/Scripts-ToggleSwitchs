<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0
      http://www.kde.org/standards/kcfg/1.0/kcfg.xsd" >
    <kcfgfile name=""/>

    <group name="General">
        <entry name="iconName" type="String">
            <default></default>
        </entry>

        <entry name="compactName" type="string">
            <default>Compact Switch</default>
        </entry>

        <entry name="boldTextCompact" type="bool">
            <default>false</default>
        </entry>

        <entry name="italicTextCompact" type="bool">
            <default>false</default>
        </entry>

        <entry name="compactNameColor" type="string">
            <default></default>
        </entry>

        <entry name="compactLabelVisible" type="bool">
            <default>true</default>
        </entry>

        <entry name="checked" type="bool">
            <default>false</default>
        </entry>

        <entry name="oncompactScript" type="String">
            <default>sleep 5; exit 0</default>
        </entry>
        <entry name="offcompactScript" type="String">
            <default>sleep 5; exit 0</default>
        </entry>

        <entry name="runStatusOnStartCompact" type="bool">
            <default>false</default>
        </entry>


        <entry name="compactDefaultPosition" type="bool">
            <default>true</default>
        </entry>

        <entry name="compactCustomDefaultPosition" type="bool">
            <default>false</default>
        </entry>


        <entry name="toolTipMainCompactText" type="string">
            <default></default>
        </entry>

        <entry name="toolTipSubCompactText" type="String">
            <default></default>
        </entry>

        <entry name="toolTipSubCompactTextOutPut" type="bool">
            <default>true</default>
        </entry>

        <entry name="interval" type="int">
            <default>1000</default>
        </entry>

        <entry name="intervalRun" type="bool">
            <default>false</default>
        </entry>

        <entry name="startnotifOnCompact" type="bool">
            <default>false</default>
        </entry>

        <entry name="notifTitleOnCompact" type="string">
            <default></default>
        </entry>

        <entry name="notifTextOnCompact" type="string">
            <default></default>
        </entry>

        <entry name="iconOnCompact" type="string">
            <default>emblem-success</default>
        </entry>

        <entry name="startnotifOffCompact" type="bool">
            <default>false</default>
        </entry>

        <entry name="notifTitleOffCompact" type="string">
            <default></default>
        </entry>

        <entry name="notifTextOffCompact" type="string">
            <default></default>
        </entry>

        <entry name="iconOffCompact" type="string">
            <default>emblem-remove</default>
        </entry>
    </group>

    <group name="Switch">
        <entry name="switches" type="String">
            <default>[{"name": "Default Group Switch", "switchId": "defaultGroupSwitch", "isGroup": true, "isMain": false, "rowIndex": "0", "columnIndex": "0",
                "checked": false, "defaultPosition": true, "customDefaultPosition": false,
                "positionByCompact": false, "positionByGroup": false,
                "onScript": "sleep 5; exit 0",
                "offScript": "sleep 5; exit 0",
                "runStatusOnStart": true, "displayName": true, "switchNameColor": "", "boldText": true, "italicText": false, "tooltipFullEnabled": true, "toolTipFullMainText": "Default Group Switch", "toolTipFullSubText": "This is the default description of the Group Switch. A Switch Group creates a new column and can control the activation of all the switches in its column. This description can be edited or disabled in the options.",

                 "startnotifOn": true, "startnotifOff": true, "notificationTitleOn": "Switch activation", "notificationTextOn": "This notification is displayed because the switch Group has been activated", "iconOn": "emblem-success", "notificationTitleOff": "Switch deactivation", "notificationTextOff": "This notification is displayed because the switch Group has been deactivated", "iconOff": "emblem-remove"}]</default>
        </entry>
    </group>

</kcfg>
